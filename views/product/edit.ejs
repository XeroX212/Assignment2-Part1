<%- include ../partials/header.ejs %>

<main class="row">
<h1>Product Details</h1>
    <form method="post" action="<%= product._id %>">
        <fieldset class="form-group">
            <label for="name" class="col-sm-2">name: *</label>
            <input name="name" id="name" required value="<%= product.name %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="Type" class="col-sm-2">Type: *</label>
            <input name="Type" id="Type" required value="<%= product.Type %>" />
        </fieldset>
        <fieldset class="form-group">
            <label for="color" class="col-sm-2">Color: *</label>
            <input name="color" id="color" required><%= product.color %>
            </input>
        </fieldset>
        <div>
            <%= product.created %>
        </div>
        <button class="btn btn-primary col-sm-offset-2">Save</button>
        
        <a href="/product/delete/<%= product._id %>" title="Delete" class="confirm">
            <button class="btn btn-danger" type="button">Delete</button>
    </form>
</main>

<%- include ../partials/footer.ejs %>