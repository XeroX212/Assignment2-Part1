<main class="row">
    <h1>Product Details</h1>
    <form method="post" action="add">
     <fieldset class="form-group">
            <label for="name" class="col-sm-2">Name: *</label>
            <input name="name" id="name" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="Type" class="col-sm-2">Type: *</label>
            <input name="Type" id="Type" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="color" class="col-sm-2">Color: *</label>
            <input name="color" id="color" required></input>
        </fieldset>
        <button class="btn btn-primary col-sm-offset-2">Save</button>
    </form>
</main>

